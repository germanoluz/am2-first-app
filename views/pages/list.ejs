<%- contentFor( 'body') %>

<div class="jumbotron text-center">
    <h1>Usuários Cadastrados</h1>
    <p>Lista de usuários Cadastrados no sistema - usando HTML.</p>
</div>
<% let linkEnvia="/list/listar"; %>
<div class="row">

    <div class="col-lg-12 adiciona">
        <a type="button" class="btn btn-primary" onclick="listando('<%= linkEnvia %>')" >
            <i class="fas fa-list"></i>
            Atualizar Lista
        </a>
    </div> 



    <div class="table-responsive-xl ">     
        <table class="table table-hover bg-light" id="lista">
            <thead class="thead">
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Endereço</th>
                <th>Idade</th>
                <th>Altura</th>
                <th>Vota?</th>
            </tr>
            </thead>
            <tbody class="minhaLista">

            </tbody>
        </table>
    </div>

</div>

